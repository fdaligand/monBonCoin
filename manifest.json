{

  "description": "Hide adds that user don't want to view anymore",
  "manifest_version": 2,
  "name": "monBonCoin",
  "version": "1.0",
  "homepage_url": "https://github.com/fdaligand/monBonCoin",
  "icons": {
    "48": "icons/lbc_48.png"
  },

  "background": {
    "scripts": ["background.js"]
  },


  "page_action": {
    "default_icon": "icons/mbc_icon.svg",
    "default_title" : "monBonCoin Icon"
  },

    "content_scripts":[
    {
      "matches":["*://*.leboncoin.fr/*"],
      "js":["contentScript.js"]
    }
  ],
  
  "permissions": [
    "*://*.mozilla.org/*",
    "tabs",
    "declarativeContent"
  ]




}